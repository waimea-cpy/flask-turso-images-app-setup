{#=====================================================
  Thing page
  - Details of a given thing
  - Links to perform actions: delete
  - Link back to the main list
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo

{% endblock %}


{% block content %}

    <h1>A Single Thing...</h1>


    <article class="thing">

        <header>
            <h3>Name: {{ thing.name }}</h3>
        </header>

        <img src="/image/{{ thing.id }}" alt="{{ thing.name }}">

        <p>Price: ${{ thing.price }}</p>

        <footer>
            <a href="/delete/{{ thing.id }}" onclick="return confirm('Really delete?');">Delete</a>
        </footer>

    </article>


    <a role="button" href="/things">Back to Thing List</a>

{% endblock %}

