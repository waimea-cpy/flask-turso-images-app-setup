{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo

{% endblock %}


{% block content %}

    <h1>A Single Thing...</h1>


    <article>

        <header>
            <h3>Name: {{ thing.name }}</h3>
        </header>

        <p>Price: ${{ thing.price }}</p>

        <footer>
            <a href="/delete/{{ thing.id }}" onclick="return confirm('Really delete?');">Delete</a>
        </footer>

    </article>


    <a role="button" href="/things">Back to Thing List</a>

{% endblock %}

