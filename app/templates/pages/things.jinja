{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo

{% endblock %}


{% block content %}

    <h1>Things...</h1>


    <article>

        <ul>
            {% for thing in things %}

                <li>
                    <a href="/thing/{{ thing.id }}">
                        {{ thing.name }}
                    </a>
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>


    <article>

        <h3>Add a New Thing...</h3>

        <form action="/add" method="POST" enctype="multipart/form-data">

            <input
                type="text"
                name="name"
                placeholder="Name of new thing"
                required
            >

            <input
                type="number"
                name="price"
                min="0"
                placeholder="Price in dollars"
                required
            >

            <input
                type="file"
                name="image"
                accept=".jpeg,.jpg,.png,.avif,.gif,.svg"
                required
            >

            <button>Add the Thing</button>

        </form>

    </article>

{% endblock %}

